{% extends 'base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
<div class="princip">
    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        <div class="mb-3">
        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="mb-3">
        {{ form_row(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
        {{ form_row(registrationForm.avatar, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a href="{{ path('app_login') }}" class="btn btn-primary float-end">Retour Ã  la page de connexion</a>
    {{ form_end(registrationForm) }}
</div>
<style>
.princip {
    display : flex;
    justify-content : center;
    margin : 10% 10% 10% 10%;
}

.form {
    display : flex;
    justify-content : center;
}

.btn{
    margin: 10px;
}
</style>
{% endblock %}
